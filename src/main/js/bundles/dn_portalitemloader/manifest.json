{
    "name": "dn_portalitemloader",
    "version": "1.1.2-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "main": "",
    "icon": {},
    "productName": "devnet-mapapps-portal-item-loader",
    "keywords": [
        "portal"
    ],
    "dependencies": {
        "apprt-vue": "^4.14.0",
        "apprt-vuetify": "^4.14.0",
        "apprt-binding": "^4.14.0",
        "apprt-fetch": "^4.14.0",
        "map-widget": "^4.14.0",
        "esri": "^4.22.0"
    },
    "optionalDependencies": {
        "sdi_loadservice": "^5.6.0"
    },
    "cssThemesExtension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "portalItemLoaderWidget",
            "window": {
                "dockTool": "portalItemLoaderToggleTool",
                "closable": true,
                "minimizeOnClose": true,
                "maximizable": true,
                "resizable": true,
                "windowClass": "noPadding"
            }
        },
        {
            "widgetRole": "portalItemLoaderWidget",
            "sublayout": [
                "desktop"
            ],
            "window": {
                "marginBox": {
                    "h": "70%",
                    "w": "70%"
                },
                "minSize": {
                    "h": 400,
                    "w": 340
                }
            }
        },
        {
            "widgetRole": "portalItemLoaderWidget",
            "sublayout": [
                "tablet_landscape",
                "tablet_portrait"
            ],
            "window": {
                "resizable": false,
                "marginBox": {
                    "h": "70%",
                    "w": "70%"
                },
                "minSize": {
                    "h": 400,
                    "w": 340
                }
            }
        },
        {
            "widgetRole": "portalItemLoaderWidget",
            "sublayout": [
                "mobile_landscape",
                "mobile_portrait"
            ],
            "window": {
                "resizable": false,
                "marginBox": {
                    "w": "100%",
                    "h": "100%",
                    "b": 40,
                    "l": 0
                }
            }
        }
    ],
    "components": [
        {
            "name": "Config",
            "impl": "./PortalItemLoaderModel",
            "provides": "dn_portalitemloader.PortalItemLoaderModel",
            "propertiesConstructor": true,
            "properties": {
                "portals": [
                    {
                        "id": "arcgis",
                        "title": "ArcGIS Online",
                        "url": "https://arcgis.com"
                    }
                ],
                "rowsPerPageItems": [
                    100
                ],
                "pagination": {
                    "rowsPerPage": 100
                },
                "spaceFilter": "all",
                "spaceFilters": [
                    {
                        "id": "all",
                        "title": "${ui.spaceFilters.all}"
                    },
                    {
                        "id": "organisation",
                        "title": "${ui.spaceFilters.organisation}"
                    },
                    {
                        "id": "my-content",
                        "title": "${ui.spaceFilters.my-content}"
                    },
                    {
                        "id": "fav",
                        "title": "${ui.spaceFilters.fav}"
                    }
                ],
                "typeFilter": "all",
                "typeFilters": [
                    {
                        "id": "all",
                        "title": "${ui.allServiceTypes}"
                    },
                    {
                        "id": "Feature Service",
                        "title": "Feature Service"
                    },
                    {
                        "id": "Vector Tile Service",
                        "title": "Vector Tile Service"
                    },
                    {
                        "id": "Map Service",
                        "title": "Map Service"
                    },
                    {
                        "id": "Image Service",
                        "title": "Image Service"
                    },
                    {
                        "id": "Scene Service",
                        "title": "Scene Service"
                    },
                    {
                        "id": "3DTilesService",
                        "title": "3DTilesService"
                    },
                    {
                        "id": "OGCFeatureServer",
                        "title": "OGCFeatureServer"
                    },
                    {
                        "id": "WFS",
                        "title": "WFS"
                    },
                    {
                        "id": "WMS",
                        "title": "WMS"
                    }
                ],
                "sortAscending": false,
                "sortByField": "modified",
                "sortByFields": [
                    {
                        "id": "modified",
                        "title": "${ui.sortByFields.modified}"
                    },
                    {
                        "id": "title",
                        "title": "${ui.sortByFields.title}"
                    },
                    {
                        "id": "uploaded",
                        "title": "${ui.sortByFields.uploaded}"
                    },
                    {
                        "id": "username",
                        "title": "${ui.sortByFields.username}"
                    },
                    {
                        "id": "created",
                        "title": "${ui.sortByFields.created}"
                    },
                    {
                        "id": "type",
                        "title": "${ui.sortByFields.type}"
                    },
                    {
                        "id": "owner",
                        "title": "${ui.sortByFields.owner}"
                    },
                    /*{
                        "id": "avg-rating",
                        "title": "${ui.sortByFields.avg-rating}"
                    },
                    {
                        "id": "num-ratings",
                        "title": "${ui.sortByFields.num-ratings}"
                    },
                    {
                        "id": "num-comments",
                        "title": "${ui.sortByFields.num-comments}"
                    },*/
                    {
                        "id": "num-views",
                        "title": "${ui.sortByFields.num-views}"
                    }
                ],
                "rootId": "my_services",
                "rootTitle": "${ui.myServicesTitle}"
            }
        },
        {
            "name": "PortalItemLoaderWidgetFactory",
            "provides": [
                "dijit.Widget",
                "dn_portalitemloader.Widget"
            ],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "portalItemLoaderWidget"
            },
            "references": [
                {
                    "name": "_portalItemLoaderModel",
                    "providing": "dn_portalitemloader.PortalItemLoaderModel"
                },
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_addLayerService",
                    "providing": "sdi_loadservice.AddLayerService",
                    "cardinality": "0..1",
                    "bind": "addLayerService"
                }
            ]
        },
        {
            "name": "PortalItemLoaderToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "portalItemLoaderToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-toolcase",
                "toolRole": "toolset",
                "togglable": true,
                "activateHandler": "activateTool",
                "deactivateHandler": "deactivateTool"
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_portalitemloader.Widget"
                }
            ]
        }
    ]
}
